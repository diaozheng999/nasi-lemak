    "@types/lodash": "^4.14.135",
    "jest": "^24.8.0",
    "rollup": "^1.16.7",
    "rollup-plugin-terser": "^5.1.1",
    "terser": "^4.1.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-no-focused-test": "^0.5.0",
    "typescript": "^3.5.2"
